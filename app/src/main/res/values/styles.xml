<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">20dp</item>
        <item name="android:fontFamily">"@font/pt_sans"</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/blue_color</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="BottomHeaderTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">18dp</item>
        <item name="android:fontFamily">"@font/pt_sans"</item>
        <item name="android:textColor">@color/grey_color</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DescriptionText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="lineHeight">21sp</item>
        <item name="android:fontFamily">"@font/pt_sans"</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="BottomHeaderTextStyle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">18dp</item>
        <item name="android:fontFamily">"@font/pt_sans"</item>
        <item name="android:textColor">@color/grey_color2</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PriceTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">700</item>
        <item name="lineHeight">18dp</item>
        <item name="android:fontFamily">"@font/pt_sans"</item>
        <item name="android:textColor">@color/red_color</item>
        <item name="maxLines">1</item>
    </style>

    <style name="OglasDeletedTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontWeight">400</item>
        <item name="lineHeight">20dp</item>\
        <item name="android:fontFamily">"@font/pt_sans"</item>
        <item name="android:textColor">#A2A2A2</item>
        <item name="android:maxLines">2</item>
    </style>
</resources>